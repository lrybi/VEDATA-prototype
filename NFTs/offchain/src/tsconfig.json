{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
     "outDir": "./dist",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    // "moduleResolution": "node"
    "moduleResolution": "node",
    //"ignoreDeprecations": "6.0"
    //"ignoreDeprecations": "6.0"
  },
  // "include": ["src/index.ts"],
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}